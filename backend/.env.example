PORT=8080
KUBECONFIG_PATH=~/.kube/config
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
WS_HEARTBEAT_INTERVAL=30000
WS_HEARTBEAT_TIMEOUT=10000
NODE_ENV=development

# Authentication Configuration (Optional)
# Set AUTH_ENABLED=true to require OIDC authentication
AUTH_ENABLED=false

# OIDC Configuration (Required when AUTH_ENABLED=true)
# Example values for Microsoft Entra ID:
# OIDC_ISSUER=https://login.microsoftonline.com/{tenant-id}/v2.0
# OIDC_AUDIENCE={client-id}
# OIDC_JWKS_URI=https://login.microsoftonline.com/{tenant-id}/discovery/v2.0/keys
OIDC_ISSUER=
OIDC_AUDIENCE=
OIDC_JWKS_URI=

# Mock mode configuration
MOCK_MODE=false
MOCK_NODE_COUNT=5
MOCK_POD_COUNT=50
MOCK_DYNAMIC_UPDATES=false
MOCK_UPDATE_INTERVAL=5000