{
  "name": "threek8s-backend",
  "version": "1.1.0",
  "description": "Backend API for Kubernetes 3D visualization",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:contract": "vitest run tests/contract",
    "test:integration": "vitest run tests/integration",
    "test:unit": "vitest run tests/unit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "docker:build": "docker build -t threek8s-backend .",
    "docker:build:multi": "docker buildx build --platform linux/amd64,linux/arm64 -t threek8s-backend .",
    "docker:run": "docker run -p 8080:8080 --env-file .env threek8s-backend",
    "docker:test": "docker build -t threek8s-backend:test . && docker run --rm threek8s-backend:test npm test"
  },
  "keywords": [
    "kubernetes",
    "visualization",
    "websocket",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@kubernetes/client-node": "^1.3.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "ws": "^8.18.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.5.2",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
